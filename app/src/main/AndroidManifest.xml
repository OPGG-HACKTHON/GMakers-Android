<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.gmakers_android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GMakersAndroid"
        android:usesCleartextTraffic="true"
        tools:targetApi="p">
        <activity android:name=".feature.profile.ui.EditChampionActivity" />
        <activity android:name=".feature.profile.ui.PickChampionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".feature.profile.ui.EditProfileFinishActivity" />
        <activity android:name=".feature.profile.ui.EditProfileActivity" />
        <activity android:name=".feature.sign.ui.RegisterActivity" />
        <activity android:name=".feature.sign.ui.SplashActivity" />
        <activity android:name=".feature.profile.ui.EditProfileStartActivity" />
        <activity android:name=".feature.sign.ui.LoginActivity" />
        <activity android:name=".feature.main.ui.MainActivity" />
        <activity android:name=".feature.main.ui.ProfileActivity" />
        <activity android:name=".feature.detail.ui.ProfileDetailActivity" />
        <activity android:name=".feature.verify.ui.VerifyActivity" />
        <activity android:name=".feature.search.ui.SearchActivity" />
    </application>

</manifest>